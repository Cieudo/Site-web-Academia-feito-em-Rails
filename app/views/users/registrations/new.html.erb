<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-control">
    <%= f.label :email, class: "form-control-label" %><br />
    <%= f.email_field :email, class: "form-control-input", placeholder: "Digite seu e-mail" %>
  </div>

  <div class="form-control">
    <%= f.label :password, class: "form-control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control-input", autocomplete: "new-password" %>
  </div>

  <div class="form-control">
    <%= f.label :password_confirmation, class: "form-control-label" %><br />
    <%= f.password_field :password, class: "form-control-input", autocomplete: "new-password" %>
  </div>

  <div class="form-control">
  <%= f.label :idade, class: "form-control-label" %><br />
  <%= f.text_field :idade, class: "form-control-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary form-control-submit" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
